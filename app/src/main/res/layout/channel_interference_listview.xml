<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="1"
              android:background="@color/primary_dark_material_dark"
              android:padding="3dp"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:singleLine="true"
        android:id="@+id/cia_channel_textview"
        style="@style/Standard_Font"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        >

        <ProgressBar
            android:id="@+id/cia_valuation_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:paddingLeft="7dp"
            android:paddingRight="10dp"
            android:progressDrawable="@drawable/green_progress_bar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style ="@style/Standard_Font"
            android:text=""
            android:singleLine="true"
            android:id="@+id/cia_valuation_progressbar_textView"
            android:background="#00000000"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:singleLine="true"
        android:id="@+id/cia_valuation_textview"
        style="@style/Standard_Font"
        android:gravity="center"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:singleLine="true"
        android:id="@+id/cia_number_of_networks_textview"
        style="@style/Standard_Font"
        android:gravity="center"
        />

</LinearLayout>
